<resources>

    <string-array name="number_decimals" translatable="false">
        <item>0</item>
        <item>1</item>
        <item>2</item>
        <item>3</item>
        <item>4</item>
        <item>5</item>
        <item>6</item>
        <item>7</item>
        <item>8</item>
        <item>9</item>
        <item>10</item>
    </string-array>

    <string-array name="group_separators" translatable="false">
        <item>@string/group_separator_none</item>
        <item>,</item>
        <item>" "</item>
        <item>.</item>
    </string-array>

    <string-array name="decimal_separators" translatable="false">
        <item>.</item>
        <item>,</item>
    </string-array>

    <!--custom calendar-->
    <declare-styleable name="PersianCalendarView">
        <attr name="pcv_typefacePath" format="string"></attr>
        <attr name="pcv_headersTypefacePath" format="string"></attr>
        <attr name="pcv_colorBackground" format="color"></attr>
        <attr name="pcv_colorHoliday" format="color"></attr>
        <attr name="pcv_colorHolidaySelected" format="color"></attr>
        <attr name="pcv_colorNormalDaySelected" format="color"></attr>
        <attr name="pcv_colorNormalDay" format="color"></attr>
        <attr name="pcv_colorDayName" format="color"></attr>
        <attr name="pcv_eventUnderlineColor" format="color"></attr>
        <attr name="pcv_todayBackground" format="reference"></attr>
        <attr name="pcv_selectedDayBackground" format="reference"></attr>
        <attr name="pcv_fontSize" format="dimension"></attr>
        <attr name="pcv_headersFontSize" format="dimension"></attr>
        <attr name="pcv_longpressUnderlineColor" format="color"></attr>
    </declare-styleable>

</resources>