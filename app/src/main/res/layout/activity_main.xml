<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#292929"
    android:orientation="vertical">

    <com.seyed.nazanin.myapplication.PersianCalendarView
        android:id="@+id/persian_calendar"
        android:layout_width="match_parent"
        android:layout_height="290sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        app:pcv_colorBackground="#000000"
        app:pcv_colorDayName="#bab6b6"
        app:pcv_colorHoliday="#ff0000"
        app:pcv_colorHolidaySelected="#f1f2f3"
        app:pcv_colorNormalDay="#f3f4f5"
        app:pcv_colorNormalDaySelected="#ffffff"
        app:pcv_eventUnderlineColor="#02f0f0"
        app:pcv_longpressUnderlineColor="#ffc107"
        app:pcv_typefacePath="fonts/NotoNaskhArabic-Regular.ttf"
        app:pcv_fontSize="15sp"
        app:pcv_headersFontSize="16sp"
        />

    <TextView
        android:id="@+id/txt_day_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#f0f2f3"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/txt_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#c6d9e2"
        android:textSize="20sp"/>

</LinearLayout>